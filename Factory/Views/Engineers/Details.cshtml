@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Engineer @Html.DisplayFor(model => model.EngineerName) Details</h2>
<hr />

@if(@Model.JoinEntities.Count == 0)
{
  <p>@Html.DisplayFor(model => model.EngineerName) does not have any machines assigned yet</p>
}
else
{
  <h4>List of machines @Html.DisplayFor(model => model.EngineerName) is licensed to repair:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.Description</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to list of all engineers", "Index")</p>
<p>@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>